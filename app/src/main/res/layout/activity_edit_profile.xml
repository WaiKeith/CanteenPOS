<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/RLname"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/listIcon5"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:src="@drawable/ic_age" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:id="@+id/editName"

                android:layout_marginRight="30dp"
                android:layout_toEndOf="@+id/listIcon5"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/listIcon5" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RLpassword"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/RLname"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/listIcon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:src="@drawable/ic_password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword"
                android:layout_toRightOf="@+id/listIcon"
                android:layout_toEndOf="@+id/listIcon"
                android:layout_marginRight="30dp"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_images"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/RLpassword"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="top"
                android:padding="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:src="@drawable/ic_list_camera" />

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_file_image_box_grey600_48dp" />


            <!--<ImageView-->
                <!--android:id="@+id/image_2"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_marginLeft="@dimen/activity_vertical_margin"-->
                <!--android:visibility="gone"-->
                <!--android:src="@drawable/ic_file_image_box_grey600_48dp" />-->

            <!--<ImageView-->
                <!--android:id="@+id/image_3"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_marginLeft="@dimen/activity_vertical_margin"-->
                <!--android:visibility="gone"-->
                <!--android:src="@drawable/ic_file_image_box_grey600_48dp" />-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="150dp">


            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Cancel" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_toLeftOf="@+id/buttonCancel"
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textColor="@color/blue"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:text="Save" />

        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>

</com.flipboard.bottomsheet.BottomSheetLayout>
