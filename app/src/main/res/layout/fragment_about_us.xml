<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.edu.chiawaikeith.canteenpos.Fragments.AboutUsFragment">

    <RelativeLayout
        android:layout_below="@+id/information"
        android:background="@drawable/content_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:overScrollMode="always">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="Developer Information"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/title1"/>

        <View
            android:layout_below="@+id/title1"
            android:id="@+id/separator1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#90909090"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:id="@+id/cv1"
            android:layout_below="@+id/separator1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/developerInfo"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/developerInfo"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:text="Application Information"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/accountTitle"
            android:layout_below="@+id/cv1"/>

        <View
            android:layout_below="@+id/accountTitle"
            android:id="@+id/separator2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#90909090"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:id="@+id/cv2"
            android:layout_below="@+id/separator2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/appInfo"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/appInfo"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
